//This 7.17  initializing 2d array

public class Old
{
	public static void main(String[] args)
	{
		int [][] arr1= {{1,2,3},{2,4}};
		int [][]  arr2= {{1,2,3},{2,4}, {5,6,7,8}};
			System.out.printf("the elements of the array 1 is %n");
		display(arr1);
			System.out.printf("the elements of the array 2 is %n");
		display(arr2);
		
		
		
	}
	public static void display(int [][] arr)
	{
		
		for(int i= 0 ; i<arr.length; i++)
		{
			for(int j = 0; j<arr[i].length; j++)
			{
				System.out.printf("%d    ", arr[i][j]);
			}
				System.out.println();
			}
		}
	}
